                <input type="text" name="txtApellido" placeholder="PRIMER APELLIDO" required>
                <input type="date" name="txtF_Nacimiento" id="" required>
                <input type="text" name="txtResidencia" placeholder="DIRECCION DE RESIDENCIA" required>
                <input type="tel" name="txtTelefono" placeholder="TELEFONO" required>
                <button>REGISTRARME</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-right">
